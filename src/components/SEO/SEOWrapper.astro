---
import seoData from './data/seo-data.js'
import { SEO } from 'astro-seo'

type Props = {
  page: string
}

/*
  Page property allows component to get the correct data (title, facebook and instagram props) according the page where is going to be implemented
*/
const { page } = Astro.props
---

{
  page !== '' ? (
    <>
      <SEO
        title={seoData.pages[page].title}
        titleTemplate={seoData.titleTemplate}
        titleDefault={seoData.titleDefault}
        charset={seoData.charset}
        extend={{
          link: seoData.link,
          meta: seoData.meta
        }}
        nofollow={seoData.nofollow}
        noindex={seoData.noindex}
        openGraph={seoData.pages[page].openGraph}
        twitter={seoData.pages[page].twitter}
      />
      <meta name='generator' content={Astro.generator} />
    </>
  ) : (
    <>
      <SEO
        titleTemplate={seoData.titleTemplate}
        charset={seoData.charset}
        extend={{
          link: seoData.link,
          meta: seoData.meta
        }}
      />
      <meta name='generator' content={Astro.generator} />
    </>
  )
}
