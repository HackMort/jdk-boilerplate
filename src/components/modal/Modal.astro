---
import './modal.scss'
type Props = {
  id: string
  className?: string
  closeButton?: boolean
}
const { id, className = '', closeButton = true } = Astro.props
---

<template id={`jd-modal-template-${id}`}>
  <section
    class={`jd-modal ${className}`}
    id={`jd-modal-${id}`}
    style='display: none'
  >
    <div class='jd-modal__wrapper'>
      <div class='jd-modal__header'>
        <div class='jd-modal__close-button-wrapper'>
          {
            closeButton && (
              <slot name='modal-close-button'>
                <button class='jd-modal__close-button' data-jd-modal-close>
                  <svg
                    xmlns='http://www.w3.org/2000/svg'
                    width='24'
                    height='24'
                    viewBox='0 0 24 24'
                    style='fill: rgba(0, 0, 0, 1);transform: ;msFilter:;'
                  >
                    <path d='m16.192 6.344-4.243 4.242-4.242-4.242-1.414 1.414L10.535 12l-4.242 4.242 1.414 1.414 4.242-4.242 4.243 4.242 1.414-1.414L13.364 12l4.242-4.242z' />
                  </svg>
                </button>
              </slot>
            )
          }
        </div>
      </div>
      <div class='jd-modal__content'>
        <slot name='modal-content' />
      </div>
    </div>
  </section>
</template>
<script src='./jd-modal.ts'></script>
