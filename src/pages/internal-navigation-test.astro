</style>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    setFixSection('.test-section-a')
    setFixSection('.test-section-b')

    window.addEventListener('scroll', () => {
      setFixSection('.test-section-a')
      setFixSection('.test-section-b')
    })
  })

  function setFixSection(selector = '') {
    let extraOffset = 0
    const sectionElement = document.querySelector(selector)
    const previousSibling = sectionElement.previousElementSibling

    if (previousSibling) {
      extraOffset += previousSibling.offsetHeight
    }

    const sectionElementHeight = sectionElement.offsetHeight
    if (window.pageYOffset > sectionElementHeight + extraOffset) {
      sectionElement.classList.add('is--fixed')
    } else {
      sectionElement.classList.remove('is--fixed')
    }
  }
</script>
